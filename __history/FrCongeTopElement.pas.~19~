unit FrCongeTopElement;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Graphics, FMX.Controls, FMX.Forms, FMX.Dialogs, FMX.StdCtrls,
  FMX.Objects, FMX.Controls.Presentation;

type
  TcongeTopElement = class(TFrame)
    titreConge: TLabel;
    Rectangle1: TRectangle;
    procedure Rectangle1MouseEnter(Sender: TObject);
  private
    { Déclarations privées }
  public
    { Déclarations publiques }
  end;

implementation

{$R *.fmx}
  Var CouleurDefaut : TColor; //cela nous permettera de changer la couleur du rectangle en conception sans la changer en code(plus de fléxibilitè).
procedure TcongeTopElement.Rectangle1MouseEnter(Sender: TObject);
begin
  CouleurDefaut := Rectangle1.Fill.Color;  //pour Enregistrer la couleur que nos avons definie.
  Rectangle1.Fill.Color := ($FF3D7C4A); //Assigner une nouvelle couleur à l'entrée de la souris.
end;

end.
